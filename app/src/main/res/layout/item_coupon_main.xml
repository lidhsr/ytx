<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@mipmap/coupon_bg_valid"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20_sp"
                android:text=" ¥ "/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_30_sp"
                android:text="20"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@mipmap/coupon_bg_right"
            android:paddingLeft="@dimen/dimen_06"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15"
                    android:maxLines="2"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/dimen_17_sp"
                    android:text="女装频道专用抵用券"/>
                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/coupon_intro"
                    android:drawablePadding="@dimen/dimen_02"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:textColor="@color/text_999"
                    android:textSize="@dimen/dimen_12_sp"
                    android:text="单笔订单满99元可用"/>
                <TextView
                    android:id="@+id/tv_invalidtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/coupon_invalid_time"
                    android:drawablePadding="@dimen/dimen_02"
                    android:textColor="@color/text_999"
                    android:textSize="@dimen/dimen_12_sp"
                    android:text="有效期至 2015-12-30 23:59"/>
            </LinearLayout>
            <TextView
                android:id="@+id/btn_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_yellow_bg"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/dimen_10"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_05"
                android:paddingBottom="@dimen/dimen_05"
                android:text="使用"
                android:textColor="@drawable/text_yellow_bg"
                android:textSize="@dimen/dimen_16_sp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_invalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/dimen_10"
                android:src="@mipmap/coupon_img_invalid"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>