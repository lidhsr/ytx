<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <fragment
        android:id="@+id/pay_success_title"
        android:name="com.ytx.fragment.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_100"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/icon_pay_success"
        android:drawablePadding="@dimen/dimen_05"
        android:gravity="center"
        android:text="支付成功!"
        android:textSize="@dimen/dimen_20_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_weight="1"
            android:background="@color/line" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pay_cart" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_weight="1"
            android:background="@color/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共支付金额 "
            android:textColor="@color/text_333"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 12,300.00"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 元"
            android:textColor="@color/text_333"
            android:textSize="@dimen/dimen_18" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center"
        android:text="订单号:1232234543453"
        android:textColor="@color/text_333"
        android:textSize="@dimen/dimen_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/btn_black_white_bg_h"
            android:padding="@dimen/dimen_10"
            android:text="继续购物"
            android:textColor="@drawable/text_black_white_bg_n"
            android:textSize="@dimen/dimen_20" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/btn_black_white_bg_n"
            android:padding="@dimen/dimen_10"
            android:text="订单详情"
            android:textColor="@drawable/text_black_white_bg_h"
            android:textSize="@dimen/dimen_20" />
    </LinearLayout>

</LinearLayout>