<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/tv_shopname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Reshake"
            android:textColor="@color/text_333"
            android:textSize="@dimen/dimen_12_sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_10"
            android:src="@mipmap/cart_arrow_right"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/stroke"/>

    <com.ytx.widget.MyListView
        android:id="@+id/myListViewProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@color/transparent">

    </com.ytx.widget.MyListView>


    <LinearLayout
        android:id="@+id/ll_coupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:background="@drawable/cart_activity_icon"
                android:paddingBottom="@dimen/dimen_01"
                android:paddingLeft="@dimen/dimen_05"
                android:paddingRight="@dimen/dimen_05"
                android:paddingTop="@dimen/dimen_01"
                android:text="活动"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_10_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="已满足满499减50,满899减100,满1699减200[已优惠¥50]"
                android:textColor="@color/text_999"
                android:textSize="@dimen/dimen_10_sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/stroke"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:background="@drawable/shape_yellow_rectangle"
            android:paddingBottom="@dimen/dimen_03"
            android:paddingLeft="@dimen/dimen_06"
            android:paddingRight="@dimen/dimen_06"
            android:paddingTop="@dimen/dimen_03"
            android:text="优惠券"
            android:textColor="@color/color_yellow_light"
            android:textSize="@dimen/dimen_10_sp"/>

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="¥20.00"
            android:textColor="@color/text_333"
            android:textSize="@dimen/dimen_14_sp"/>

        <TextView
            android:id="@+id/tv_coupon_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="全场通用抵用券 (满159可用)"
            android:textColor="@color/text_999"
            android:textSize="@dimen/dimen_14_sp"/>
    </LinearLayout>
</LinearLayout>