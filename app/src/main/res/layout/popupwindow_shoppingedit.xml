<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_root"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/popup_bg"
    android:orientation="vertical">

    <!--<View-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="match_parent" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dimen_90"
            android:layout_height="@dimen/dimen_95"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="文字内容"
                android:textColor="@color/text_333"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="@dimen/dimen_10"
                android:text="价格"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/dimen_12" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_15"
        android:text="尺码"
        android:textColor="@color/text_333"
        android:textSize="@dimen/dimen_16" />

    <TableLayout
        android:id="@+id/table_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingRight="@dimen/dimen_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_10"
        android:text="颜色"
        android:textColor="@color/text_333"
        android:textSize="@dimen/dimen_16" />

    <TableLayout
        android:id="@+id/table_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dimen_14"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingRight="@dimen/dimen_14" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_yellow_light"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16" />
</LinearLayout>
