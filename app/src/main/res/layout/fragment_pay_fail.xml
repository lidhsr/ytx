<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <com.ytx.widget.TitleView
        android:id="@+id/pay_fail_title"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_100"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/icon_pay_fail"
        android:drawablePadding="@dimen/dimen_05"
        android:gravity="center"
        android:text="对不起,支付失败!"
        android:textSize="@dimen/dimen_20_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_weight="1"
            android:background="@color/line" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pay_cart" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_weight="1"
            android:background="@color/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人账户支付失败:"
            android:textColor="@color/text_333"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超过账户单笔限额[500]"
            android:textColor="@color/text_333"
            android:textSize="@dimen/dimen_18" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_25"
        android:background="@drawable/btn_black_white_bg_h"
        android:gravity="center"
        android:padding="@dimen/dimen_10"
        android:text="继续购物"
        android:textColor="@drawable/text_black_white_bg_n"
        android:textSize="@dimen/dimen_20" />

</LinearLayout>